@page
@model PlannerClient.Pages.StudentsModel

<h2>Student List</h2>

@if (Model.Students.Count == 0)
{
    <p><em>No students found.</em></p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Unilogin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.Name</td>
                    <td>@student.Unilogin</td>
                </tr>
            }
        </tbody>
    </table>
}
